        <section class="content-main">
            <form action="/productedit/<%= product._id  %>" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6">
                        <div class="content-header">
                            <h2 class="content-title">Update Product</h2>
                            <% if (locals.alert) { %>
                                <div class="alert alert-danger text-center m-3" id="error">
                                  <%= locals.alert %>
                                </div>
                                <% } %>
                            <div>
                                <button class="btn btn-md rounded font-sm hover-up" type="submit">Update</button>
                            </div>
                            <span id="submit-error" style="font-size: 14px; margin-top: -20px" onclick="return validateForm()"></span>
                        </div>
                    </div>
                </div>
                <div id="error-messages" class="alert alert-danger text-center m-3" style="display: none;"></div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>1. General info</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Product Name</label>
                                            <input type="text" value="<%= product.productname %>" class="form-control" name="productname" id="product_name" onkeyup="validateName()">
                                            <span id="name-error" style="font-size: 14px; margin-top: -20px"></span>
                                        </div>                                   
                                        <div class="mb-4">
                                            <label class="form-label">Description</label>
                                            <textarea placeholder="Type here" class="form-control" rows="4" name="description" id="product_description" onkeyup="validateDescription()"><%= product.description %></textarea>
                                            <span id="description-error" style="font-size: 14px; margin-top: -20px; color: red;"></span>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Brand name</label>
                                            <select class="form-select" name="brand">
                                                <% brand.forEach(brand => { %>
                                                    <option value="<%= brand._id %>">
                                                      <%= brand.brand %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Stock</label>
                                            <input type="text" placeholder="Enter your stock" class="form-control" value="<%= product.stock %>" name="stock" id="product_stock" onkeyup="validateStock()" >
                                            <span id="stock-error" style="font-size: 14px; margin-top: -20px"></span>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Colour</label>
                                            <input type="text" placeholder="Enter product colour" value="<%= product.colour %>" class="form-control" name="colour"  id="product_name" onkeyup="validateName()">
                                            <span id="name-error" style="font-size: 14px; margin-top: -20px"></span>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>2. Pricing</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Old Price</label>
                                            <input type="text" placeholder="₹0.00" class="form-control" value="<%= product.oldprice %>" name="oldprice" id="product_price" onkeyup="validatePrice()">
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">New Price</label>
                                            <input type="text" placeholder="₹0.00" class="form-control" value="<%= product.newprice %>" name="newprice" id="new-price-input" onkeyup="validatePrice1()">
                                            <span id="price1-error" style="font-size: 14px; margin-top: -20px"></span>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>3. Category</h6>
                                    </div>
