                                        <div class="mb-4">
                                            <div class="mb-4">
                                                <select class="form-select" name="category">

                                                    <% category.forEach(category => { %>
                                                        <option value="<%= category._id %>">
                                                          <%= category.category %>
                                                        </option>
                                                        <% }); %>
                                                    
                                                </select>
                                            </div>
                                            <div class="mb-4">
                                                <label class="form-label">Ram</label>
                                                <input type="text" placeholder="In GB" value="<%= product.ram %>" class="form-control" name="ram" id="ram" onkeyup="ramStorage()">
                                                <span id="ram-error" style="font-size: 14px; margin-top: -20px"></span>
                                            </div>
                                            <div class="mb-4">
                                                <label class="form-label">Storage</label> 
                                                <input type="text" placeholder="In GB" class="form-control" value="<%= product.storage %>" name="storage"  id="storage" onkeyup="Storage()">
                                                <span id="storage-error" style="font-size: 14px; margin-top: -20px"></span>
                                            </div>
                                        </div>
                                    </div> <!-- col.// -->
